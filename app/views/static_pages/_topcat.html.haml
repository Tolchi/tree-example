.row
  %ul.thumbnails
    - @top_categories.each do |topcat|
      %li.span3
        .thumbnail
          .thumbnail60px
            = image_tag("blank.png")
          .topcategory
            %p
              %strong
                = link_to topcat.name, static_pages_categories_path(:id => topcat.id)
            %p
              %ul.subcategories
                - topcat.children.first(3).each do |sub|
                  %li 
                    = link_to sub.name, static_pages_categories_path(:id => sub.id)
                - if topcat.has_descendants?
                  %li 
                    = link_to '...', static_pages_categories_path(:id => topcat.id)
          .clearboth
