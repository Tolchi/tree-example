- cache "news_feed" do
  - FeedEntry.update_from_feed("http://www.telam.com.ar/xml/rss/", 'tl')
  - FeedEntry.update_from_feed("http://www.yonhapnews.co.kr/RSS/sokbo.xml", 'yh')
  - @entries_yh = FeedEntry.yh.first(5)
  - @entries_tl = FeedEntry.tl.first(4)
  .well#news
    .page-header
      %h1 
        뉴스
        %small 속보
    %ul#newstab.nav.nav-pills
      %li.active
        %a{:href => "#yonhap", "data-toggle" => "pill"}
          한국
      %li
        %a{:href => "#telam", "data-toggle" => "pill"}
          Argentina
    .pill-content.clearboth
      .pill-pane.fade.active.in#yonhap
        .accordion#accordion-yh
          - @entries_yh.each do |e|
            = render 'static_pages/newsfeed', :e => e, :news => "yh"
      .pill-pane.fade#telam
        .accordion#accordion-tl
          - @entries_tl.each do |e|
            = render 'static_pages/newsfeed', :e => e, :news => "tl"
