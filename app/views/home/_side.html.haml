- cache("news_feed") do
  - entries_yh = FeedEntry.yh.first(7)
  - entries_tl = FeedEntry.tl.first(5)
  .well#news
    .page-header
      %h1 
        뉴스
        %small 속보
    %ul#newstab.nav.nav-pills
      %li.active
        %a{:href => "#yonhap", "data-toggle" => "tab"}
          한국
      %li
        %a{:href => "#telam", "data-toggle" => "tab"}
          Argentina
      %li
        %a{:href => "#weather", "data-toggle" => "tab"}
          날씨
    .tab-content.clearboth
      .tab-pane.fade.active.in#yonhap
        .accordion#accordion-yh
          - entries_yh.each do |e|
            = render 'home/newsfeed', :e => e, :news => "yh"
      .tab-pane.fade#telam
        .accordion#accordion-tl
          - entries_tl.each do |e|
            = render 'home/newsfeed', :e => e, :news => "tl"
      .tab-pane.fade#weather
        .accordion#pronostico
