- cache("#{@max}-top_categories") do
  .row
    %ul.thumbnails
      - @top_categories.each do |topcat|
        %li.span3
          .thumbnail
            .thumbnail60px
              = link_to topcat do
                %i{:class => "#{topcat.icon} icon60"}
            .topcategory
              %p
                %strong
                  - a = Array.new
                  - @topcat_subcat[topcat.name].each do |subcat|
                    - a.push subcat.name
                  = link_to topcat.name, topcat, "data-original-title" => a.join(','), :rel => "tooltip"
              %ul.subcategories
                - @topcat_subcat[topcat.name][0,1].each do |sub|
                  %li 
                    = link_to sub.name, sub
                - if topcat.has_descendants?
                  %li 
                    = link_to "...", topcat
            .clearboth
